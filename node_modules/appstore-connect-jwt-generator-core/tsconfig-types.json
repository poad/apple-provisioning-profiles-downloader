{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "rootDir": "./src",
    "outDir": "./@types",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
