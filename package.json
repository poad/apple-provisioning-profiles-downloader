{
  "name": "download-provisioning-profiles",
  "version": "1.0.4",
  "private": true,
  "main": "bin/main.mjs",
  "scripts": {
    "build": "yarn clean && yarn types && yarn tsc",
    "types": "tsc -p tsconfig-types.json",
    "tsc": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "package": "ncc build --source-map --license licenses.txt -o bin",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "dev": "ts-node src/main.ts",
    "clean": "rimraf bin && git clean -Xdf -e '!/.idea/**' -e '!/node_modules' -e '!/node_modules/**'",
    "clean:dry": "git clean -Xdfn -e '!/.idea/**' -e '!/node_modules' -e '!/node_modules/**'",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "exports": {
    ".": {
      "import": "./bin/main.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poad/download-provisioning-profiles"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "type": "module",
  "types": "bin/@types/index.d.ts",
  "author": "Kenji Saito",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/io": "^1.1.1",
    "appstore-connect-jwt-generator-core": "^1.1.7",
    "esm": "^3.2.25",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^3.2.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.153",
    "@swc/helpers": "^0.3.6",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@typescript-eslint/parser": "^5.14.0",
    "@vercel/ncc": "^0.33.3",
    "babel-jest": "^27.5.1",
    "eslint": "^8.10.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "swc-loader": "^0.1.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".mts"
    ],
    "moduleFileExtensions": [
      "mts",
      "ts",
      "js",
      "mjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.mts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": true
              },
              "mangle": true
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": true,
          "sourceMaps": true,
          "module": {
            "type": "es6",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  }
}
