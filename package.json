{
  "name": "download-provisioning-profiles",
  "version": "1.0.4",
  "private": true,
  "main": "./lib/main.cjs",
  "scripts": {
    "build": "yarn types && yarn tsc",
    "types": "tsc -p tsconfig-types.json",
    "tsc": "tsc",
    "format": "prettier --write **/*.cts **/*.ts",
    "format-check": "prettier --check **/*.cts **/*.ts",
    "lint": "eslint **/*.ts",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "test": "jest --coverage --silent=false --verbose false",
    "dev": "ts-node src/main.cts",
    "clean": "rimraf lib dist",
    "all": "yarn clean && yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poad/download-provisioning-profiles"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "type": "commonjs",
  "types": "lib/@types/index.d.ts",
  "author": "Kenji Saito",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/io": "^1.1.2",
    "appstore-connect-jwt-generator-core": "*",
    "cross-fetch": "^3.1.5",
    "jsonwebtoken": "^8.5.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.171",
    "@swc/helpers": "^0.3.8",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.26",
    "@typescript-eslint/parser": "^5.20.0",
    "@vercel/ncc": "^0.33.4",
    "babel-jest": "^27.5.1",
    "eslint": "^8.14.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "swc-loader": "^0.2.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".mts"
    ],
    "moduleFileExtensions": [
      "mts",
      "ts",
      "js",
      "mjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.mts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": true
              },
              "mangle": true
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": true,
          "sourceMaps": true,
          "inlineSourcesContent": true,
          "module": {
            "type": "commonjs",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  }
}
