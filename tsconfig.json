{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "DOM",
      "esnext"
    ],
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "files": [
    "src/main.cts",
    "src/client.cts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "lib", "src/@types/*.ts"]
}
