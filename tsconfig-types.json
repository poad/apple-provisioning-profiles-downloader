{
  "extends": ".",
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "DOM",
      "esnext"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "files": [
    "src/@types/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/*.ts"
  ]
}